if [$UID -ne 0]; then
	alias apt='sudo apt'
	alias halt='sudo halt'
	alias reboot='sudo reboot'
	alias apt-updater='sudo apt-updater'
fi
alias ls='ls --color=always -lath'
function apt-updater {
	apt-get update &&
	apt-get dist-upgrade -Vy &&
	apt-get autoremove -y &&
	apt-get autoclean &&
	apt-get clean &&
	reboot
	}
